<Window x:Class="Typing.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Typing"
        mc:Ignorable="d"
        Title="설정" Height="180" Width="400" Topmost="True" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="304*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20,20,0,0" Grid.ColumnSpan="2">
            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal">
                <Label Content="재생 파일" VerticalAlignment="Top" Width="84" Height="25" Padding="5,3,5,5"/>
                <TextBox x:Name="PlayFileTextBox" Tag ="PLAYFILE" IsReadOnly="True" Height="25" Width="200" />
                <Button Content="..." Tag="FINDFILE" Margin="10,0,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="FindAudioFileButton_Click"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="20,60,0,0" Grid.ColumnSpan="2">
            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal">
                <Label Content="배경 이미지" VerticalAlignment="Top" Width="84" Height="25" Padding="5,3,5,5"/>
                <TextBox x:Name="BgImageTextBox" Tag ="BGIMAGE" IsReadOnly="True" Height="25" Width="200" />
                <Button Content="..." Tag="FINDFILE" Margin="10,0,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="FindImageFileButton_Click"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="20,110,20,0" Grid.ColumnSpan="2">
            <StackPanel Height="Auto" Width="Auto" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="저장하고 닫기" Tag="SAVE_CLOSE" IsDefault="True" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="93" Height="25" Click="SaveCloseButton_Click"/>
                <Button Content="저장" Tag="SAVE" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Height="25" Click="SaveButton_Click"/>
                <Button Content="닫기" Tag="CLOSE" IsCancel="True" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Height="25" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
